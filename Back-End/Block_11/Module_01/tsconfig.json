{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/*.spec.ts"]
}
