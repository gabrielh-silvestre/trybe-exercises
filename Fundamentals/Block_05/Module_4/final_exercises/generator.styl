default-font = 16px

*
    box-sizing: border-box
    padding: 0
    margin: 0

.container 
    margin: auto
    width: calc(80% - 100px)

.btn
    background-color: purple
    border-radius: 10px

.hero-title
    font-size: 2 * default-font;

.navbar 
    width: 100%
    .nav-list
        display: flex
        justify-content: space-between
        list-style: none
        .nav-list-item a
            margin: 0 5px
            padding: 5px 25px
            text-decoration: none
            &:hover
                background-color: red

header
    // background-color: gray
    article
        display: flex;
        padding: 30px 0
        justify-content: space-between
        section
            display: flex
            align-items: center